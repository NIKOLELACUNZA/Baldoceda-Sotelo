@{
    ViewData["Title"] = "Contacto";
}
<section class="container formulario">
    <div class="info-contacto">
        <h2>Información de contacto</h2><br>
        <label class="tit-frm">Nombres</label><br>
        <input type="text" name="nombres"><br>
        <label class="tit-frm">Apellidos</label><br>
        <input type="text" name="apellidos"><br>
        <label class="tit-frm">E-mail</label><br>
        <input type="text" name="email"><br>
        <label class="tit-frm">Telefono</label><br>
        <input type="number" name="telefono"><br>
        <label class="tit-frm">Dirección Fisica</label><br>
        <input type="text" name="direccion"><br><br><br>
    </div>

    <div id="container category">
        <h2>Tipo de proyecto</h2>
